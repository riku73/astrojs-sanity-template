---
interface Props {
  href?: string;
  label: string;
  variant?: 'primary' | 'secondary';
  size?: 'default' | 'lg';
}

const { href = '#', label, variant = 'primary', size = 'default' } = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium rounded-full transition-all duration-200 cursor-pointer';
const sizeClasses = size === 'lg' ? 'px-8 py-3 text-base' : 'px-6 py-2.5 text-sm';
const variantClasses = variant === 'primary'
  ? 'bg-white text-navy-950 hover:bg-neutral-100 shadow-lg shadow-white/10'
  : 'bg-navy-800 text-neutral-200 hover:bg-navy-700 border border-navy-600';
---

<a href={href} class:list={[baseClasses, sizeClasses, variantClasses]}>
  {label}
</a>
